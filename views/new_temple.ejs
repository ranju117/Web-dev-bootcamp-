<%- include("partials/header") %>

<div class='container'>
    <h1 style='text-align:center'>Put a temple in the database!</h1>
    <div style="margin:30px auto; width:30%">

<form action="/temples" method="POST">
    
    <div class="form-group">
<input type='text' class="form-control" name='name' placeholder="name"></input>
</div>

<div class="form-group">
<input type='text' class="form-control" name='img' placeholder="image url"></input>
</div>

<div class="form-group">
    <input type='text' class="form-control" name='desc' placeholder="description"></input>
    </div>

<div class="form-group">
<button action='submit' class='btn btn-lg btn-primary btn-block'>Submit</button>
</div>

</form>
</div>
</div>

