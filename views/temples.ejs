<%- include("partials/header") %>

<div class='container'>
    

        <header class="jumbotron">
            <div class="container">
                <h1>Temples directory</h1>
                <p>Complete directory of temples and their associated information in Tamilnadu! Plan your trip!</p>
                <p>
                   <a class="btn btn-primary btn-large" href="/temples/new"> Know a temple not in the database? </a> 
                </p>
            </div>
        </header>
<div class="row text-center" style="display:flex; flex-wrap: wrap;">
    <% temple_list.forEach(function(temple){ %>
        <div class="col-md-3 col-sm-6">
            <div class="thumbnail">
                <img src="<%= temple.img %>">
                <div class="caption">                
                    <h4>   <%= temple.name %>  </h4>
                </div>
                <p>
                    <a href="/temples/<%= temple._id%>" class=' btn btn-primary'>More Info</a>
                </p>
            </div>
        </div>
    <% }); %>
</div>
<%- include("partials/footer") %>